<div class="w3-container">
    
<h1>Log In</h1>

<div class="w3-alert">
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>
</div>

<%= form_tag do %>

  <legend><b>Please Log In</b></legend>

<div class="w3-panel">
<%= label_tag :name, 'Username:' %>
<%= text_field_tag :name, params[:name], class:"w3-input w3-border" %>
</div>

<div class="w3-panel">
<%= label_tag :password, 'Password:' %>
<%= password_field_tag :password, params[:password], class:"w3-input w3-border" %>
</div>

<div class="w3-panel">
<%= submit_tag "Login", class:"w3-button w3-light-gray w3-border" %>
</div>

<% end %>
</div>